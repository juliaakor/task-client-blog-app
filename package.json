{
  "name": "task-client-blog-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": "19 || 20",
    "yarn": "3.6.1"
  },
  "scripts": {
    "clean": "rimraf ./build",
    "clean:npm": "rimraf ./node_modules",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --ignore-path .gitignore . --fix",
    "prettier": "prettier --check --ignore-path .gitignore .",
    "prettier:fix": "prettier --write --ignore-path .gitignore .",
    "test": "jest --watch",
    "test:all": "jest --watchAll",
    "test:ci": "jest --ci --passWithNoTests",
    "test:coverage": "rimraf ./coverage && jest --coverage && open coverage/lcov-report/index.html",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx --no -- commitlint --edit $1",
      "pre-commit": "yarn lint && yarn prettier"
    }
  },
  "dependencies": {
    "next": "14.2.13",
    "next-intl": "^3.20.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "14.2.13",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-perfectionist": "^3.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-refresh": "^0.4.12",
    "husky": "4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.16.1"
  }
}
